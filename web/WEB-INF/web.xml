<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>huudn.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>huudn.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>huudn.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeCityController</servlet-name>
        <servlet-class>huudn.controllers.ChangeCityController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertRealEstateController</servlet-name>
        <servlet-class>huudn.controllers.InsertRealEstateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProductDetailsController</servlet-name>
        <servlet-class>huudn.controllers.ShowProductDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductController</servlet-name>
        <servlet-class>huudn.controllers.SearchProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductController</servlet-name>
        <servlet-class>huudn.controllers.DeleteProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>huudn.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeCityController</servlet-name>
        <url-pattern>/ChangeCityController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertRealEstateController</servlet-name>
        <url-pattern>/InsertRealEstateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProductDetailsController</servlet-name>
        <url-pattern>/ShowProductDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProductController</servlet-name>
        <url-pattern>/SearchProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductController</servlet-name>
        <url-pattern>/DeleteProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>SearchProductController</welcome-file>
    </welcome-file-list>
</web-app>
